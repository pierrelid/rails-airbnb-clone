
<div class="navbar-lewagon">
  <%= link_to root_path do %>
    <%= image_tag "logo.png", class: 'brand' %>
  <% end %>

  <!-- displayed on laptops -->
  <div class="navbar-lewagon-actions d-none d-sm-flex">

    <% if user_signed_in? %>

    <%= link_to "My experiences", my_experiences_path, class: "dropdown-item" %>
    <%= link_to "My reservations", reservations_path, class: "dropdown-item" %>

    <div class="dropdown">
      <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#"><i class="fas fa-user"></i> Account</a>
          <a class="dropdown-item" href="#"><i class="fas fa-cogs"></i> Settings</a>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <p class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Log out</p>
          <% end %>
        </div>
     </div>

    <% else %>

    <%= link_to t(".sign_up", default: "Signup"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- displayed on phone / tablet -->
  <div class="navbar-lewagon-actions d-block d-sm-none">
    <% if user_signed_in? %>
      <div class="dropdown">
        <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <%= link_to "My experiences", reservations_path, class: "dropdown-item" %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "My experiences", reservations_path, class: "dropdown-item" %>
          <a class="dropdown-item" href="#"><i class="fas fa-user"></i> Account</a>
          <a class="dropdown-item" href="#"><i class="fas fa-cogs"></i> Settings</a>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <p class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Log out</p>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="dropdown">
        <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to new_user_registration_path do %>
            <p class="dropdown-item">Sign up</p>
          <% end %>
          <%= link_to new_user_session_path do %>
            <p class="dropdown-item">Log in</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


