<div class="container">
  <div class="row">
    <div class="card-container col-md-8">
      <% @experiences.each do |experience| %>
        <%= link_to experience_path(experience.id) do %>
          <div class="card-trip">
            <%= cl_image_tag(experience.photo.url) %>
            <div>
              <h2><%= experience.name %></h2>
              <p><i class="fas fa-user-friends"></i> <%= experience.participants_number_max %></p>
            </div>
            <h2 class="card-trip-pricing"><%= experience.price %>â‚¬</h2>
          </div>
        <% end %>
      <% end %>
    </div>

    <div
      class="col-md-4"
      id="map"
      style="width: 95%;
      height: 100vh;
      position: sticky;
      top: 0px;
      margin: 10px 0px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>


