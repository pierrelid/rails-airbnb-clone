<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5)), url('https://res.cloudinary.com/drcebzqwz/image/upload/v1550677297/clone%20air%20bnb/friend2.jpg'); background-size: cover; background-position: center;">
  <div class="container">
    <h1>Mes Reservations</h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @reservations.each do |reservation| %>
    <div class="col-sm-6">
      <div class="card-product">
        <img src="<%= image_path reservation.experience.photo %>">
        <div class="card-product-infos">
          <% if reservation.rating == nil %>
          <h2><%= reservation.experience.name %></h2>
          <%= link_to "Donner un avis", new_reservation_review_path(reservation) %>
          <% else %>
          <% reservation.rating.to_i.times do %>
          <span>‚≠ê</span>
          <% end %>
          <h2><%= reservation.experience.name %></h2>
          <span><%= reservation.review %></span>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>




